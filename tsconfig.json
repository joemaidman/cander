{
    "compilerOptions": {
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
       "importHelpers": true,
       "jsx": "react",
       "lib": ["es2015", "dom"],
       "module": "commonjs",
       "moduleResolution": "node",
       "noImplicitAny": true,
       "noImplicitReturns": true,
       "removeComments": true,
       "skipLibCheck": true,
       "sourceMap": true,
       "strictNullChecks": true,
       "suppressImplicitAnyIndexErrors": true,
       "target": "es5",
       "allowSyntheticDefaultImports": true
    },
    "include": [
       "./src/**/*"
    ],
    "compileOnSave": false
 }